<tool id="pg_import" name="Postgresql" version="@PG_VERSION@">
    <description>import sql dump</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements" />
    <command detect_errors="aggressive"><![CDATA[
            @PG_SETUP@ &&
            ls -l ./postgresql &&
            @PSQL@ -f '$infile' -L logfile.log &&
            @PG_STOP@ &&
            @ARCHIVE_DATABASE@ &&
            cat logfile.log
    ]]>
    </command>
    <inputs>
        <param format="txt" name="infile" type="data" label="Input tabular dataset" />
        <param name="database_name" type="text" label="Database name">
            <sanitizer>
                <valid initial="string.letters,string.digits">
                </valid>
            </sanitizer>
        </param>
    </inputs>
    <outputs>
        <data format="postgresql" name="outfile" from_work_dir="postgresql_out.tar.xz" />
    </outputs>
    <tests>
        <test>
            <param name="infile" value="init-galaxy-db.sql.in" ftype="txt" />
            <output file="pg_import_result1.pg.tar.xz" name="outfile" ftype="postgresql" compare="sim_size" />
        </test>
    </tests>
    <help>
<![CDATA[

@HELP_FOOTER@

]]>
    </help>
    <expand macro="citations" />
</tool>
